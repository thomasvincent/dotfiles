# Global settings
Host *
    AddKeysToAgent yes
    UseKeychain yes
    IdentityFile ~/.ssh/id_ed25519
    IdentityFile ~/.ssh/id_rsa
    ServerAliveInterval 60
    ServerAliveCountMax 120
    HashKnownHosts no

# GitHub account
Host github.com
    User {{ .github_username }}
    IdentityFile ~/.ssh/id_ed25519
    IdentitiesOnly yes

{{ if and (hasKey . "work") .work -}}
# Work-specific configuration
Host *.work.example.com
    User {{ if hasKey . "work_username" }}{{ .work_username }}{{ end }}
    IdentityFile ~/.ssh/id_work
    IdentitiesOnly yes
{{ end -}}

