{{ if eq .chezmoi.os "darwin" -}}
# bat → cat
command -v bat &>/dev/null && alias cat="bat --style=plain"

# eza → ls
if command -v eza &>/dev/null; then
  alias ls="eza --group-directories-first"
  alias ll="eza -la --group-directories-first --icons=auto"
  alias lt="eza --tree --level=2 --icons=auto"
fi

# btop → top
command -v btop &>/dev/null && alias top="btop"

# prettyping → ping
command -v prettyping &>/dev/null && alias ping="prettyping --nolegend"

# trash → rm
command -v trash &>/dev/null && alias rm="trash"

# Sane defaults for destructive commands
alias cp='cp -iv'
alias mv='mv -iv'
alias mkdir='mkdir -p'

# Typo corrections
alias brwe="brew"
alias gti="git"
alias gut="git"

# Docker shortcuts
alias d="docker"
alias dc="docker compose"
{{ end -}}
